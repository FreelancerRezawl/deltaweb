  <script>
    // a11y helpers
    const input = document.getElementById('q');
    window.addEventListener('keydown', (e)=>{
      if(e.key === '/' && document.activeElement !== input){
        e.preventDefault(); input.focus();
      }
    });

    // Fake pulse animation on click
    document.getElementById('pulseBtn').addEventListener('click', ()=>{
      const el = document.querySelector('.search');
      el.animate([{boxShadow:'0 0 0 0 rgba(0,0,0,0)'},{boxShadow:'0 0 0 6px rgba(59,130,246,.15)'}],{duration:350, direction:'alternate'});
    });

    // Optional voice input (best-effort; will no-op if unsupported)
    const voiceBtn = document.getElementById('voiceBtn');
    let recog;
    if('webkitSpeechRecognition' in window){
      recog = new webkitSpeechRecognition();
      recog.lang = 'en-US';
      recog.interimResults = true;
      voiceBtn.addEventListener('click', ()=>{
        if(voiceBtn.dataset.active){
          recog.stop(); voiceBtn.removeAttribute('data-active');
          return;
        }
        input.value='';
        recog.start(); voiceBtn.dataset.active = '1';
      });
      recog.onresult = (e)=>{
        let t=''; for(const r of e.results){ t += r[0].transcript; }
        input.value = t.trim();
      };
      recog.onend = ()=> voiceBtn.removeAttribute('data-active');
    } else {
      voiceBtn.addEventListener('click', ()=> alert('Speech recognition not supported in this browser.'))
    }
  </script>
